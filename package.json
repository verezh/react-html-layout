{
    "name": "react-html-layout",
    "version": "0.0.4",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@types/react": "^16.8.25",
        "@types/react-dom": "^16.8.5",
        "@types/styled-components": "^4.1.18",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "concurrently": "^4.1.1",
        "eslint": "^6.2.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "prepend-file": "^1.3.1",
        "prettier": "^1.18.2",
        "rollup": "^1.19.4",
        "rollup-plugin-scss": "^1.0.2",
        "rollup-plugin-typescript2": "^0.22.1",
        "ts-node": "^8.3.0",
        "tslib": "^1.10.0",
        "typescript": "^3.5.3"
    },
    "peerDependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "styled-components": "^4.3.2"
    },
    "scripts": {
        "build": "rollup -c",
        "build-watch": "rollup -c -w",
        "install-all": "npm i && cd example && npm i",
        "start-example": "cd example && npm start",
        "deploy-example": "cd example && npm run deploy",
        "dev": "concurrently --kill-others \"npm run build-watch\" \"npm run start-example\"",
        "test": "ts-node test/test.ts",
        "pretest": "npm run build",
        "test:lint": "eslint ./src/**/*.ts ./src/**/*.tsx ./example/src/**/*.ts ./example/src/**/*.tsx",
        "test:lint:fix": "npm run test:lint -- --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/berezh/react-html-layout.git"
    },
    "keywords": [
        "react",
        "html",
        "layout",
        "header",
        "footer",
        "sidebar",
        "content"
    ],
    "author": "Vadym Poberezhnyi",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/berezh/react-html-layout/issues"
    },
    "homepage": "https://github.com/berezh/react-html-layout#readme",
    "files": [
        "dist"
    ],
    "dependencies": {
        "node-sass": "^4.13.0"
    }
}
